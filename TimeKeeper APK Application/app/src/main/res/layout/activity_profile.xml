<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/gapLarge"
    android:layout_height="match_parent"
    android:background="@color/colorLightGray"
    tools:context=".ProfileActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/gapLarge"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
        >

            <TextView
                android:id="@+id/nameTVAP"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/card_bg"
                android:padding="@dimen/gapLarge"
                android:textAlignment="center"
                android:textSize="@dimen/textNormal"
                android:text="Name"
                android:layout_marginBottom="@dimen/gapXL"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/card_bg"
                android:paddingTop="@dimen/gapDefault"
                android:orientation="vertical"
                >

                <TextView
                    android:id="@+id/ueventsTVAP"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/gapLarge"
                    android:textAlignment="center"
                    android:textSize="@dimen/textNormal"
                    android:text="0 User Events"
                    />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@color/colorLightGray"
                    />

                <TextView
                    android:id="@+id/subEventsTVAP"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/gapLarge"
                    android:textAlignment="center"
                    android:textSize="@dimen/textNormal"
                    android:text="0 Subscribed Events"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="15dp"
                    android:textAlignment="center"
                    android:textSize="@dimen/textNormal"
                    android:text="Logout"
                    android:background="#F84E4E"
                    android:textColor="@color/colorWhite"
                    android:onClick="attemptLogout"
                    />


            </LinearLayout>

        </LinearLayout>

    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/card_bg"
        android:layout_alignParentBottom="true"
        android:padding="@dimen/gapDefault"
        android:elevation="@dimen/gapSmall"
        android:orientation="horizontal">

        <ImageButton
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_calendar_off"
            android:background="#fff"
            android:layout_margin="@dimen/gapDefault"
            android:id="@+id/calendarNav"
            android:onClick="navigate"
            />

        <ImageButton
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_timer_off"
            android:background="#fff"
            android:layout_margin="@dimen/gapDefault"
            android:id="@+id/timerNav"
            android:onClick="navigate"
            />

        <ImageButton
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_stopwatch_off"
            android:background="#fff"
            android:layout_margin="@dimen/gapDefault"
            android:id="@+id/stopwatchNav"
            android:onClick="navigate"
            />

        <ImageButton
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_profile"
            android:background="#fff"
            android:layout_margin="@dimen/gapDefault"
            android:id="@+id/profileNav"
            android:onClick="navigate"
            />

        <ImageButton
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_tips_off"
            android:background="#fff"
            android:layout_margin="@dimen/gapDefault"
            android:id="@+id/tipsNav"
            android:onClick="navigate"
            />
    </LinearLayout>


</RelativeLayout>